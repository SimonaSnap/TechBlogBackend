<div class='text-center card'>
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
    <p>
        <button class='btn btn-primary'>Leave Comment</button>
    </p>
</div>

{{#each comments as |comment|}}
<div class="card">
    <div class="card body">
        <p> {{comment.content}}</p>
        <p> {{comment.user.username}}</p>
    </div>
</div>
{{/each}}